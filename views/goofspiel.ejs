  <body>
    <% include ./partials/_header %>

    <h1>Opponent:
      <span id="opponentName"></span>
      <span id="Wins"></span>
      <span id="winRate"></span>
    </h1>
    <div class="opponent">
      <div class="container">
        <div class="card">
