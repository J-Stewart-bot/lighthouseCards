          <img src="/cards/blue_back.png"/>
        </div>
        <div class="card">
          <img src="/cards/blue_back.png"/>
        </div>
      </div>
      <footer>
        <span id="opponentScore">0</span>
        <button id="toggle" class="btn btn-outline-info">Record</button>
      </footer>
    </div>

    <div id="smallRecord">
        <table>
            <% for (let record of winnersRecords) { %>
              <% if (record.game_id === 1) { %>
                <tr id="<%= record.name %>">
                  <td class="records">Wins:<%= record.wins %></td>
                  <% for (let record2 of losersRecords) { %>
                    <% if (record.name === record2.name && record2.game_id === 1) { %>
                      <td class="records">Win Rate:<%= Math.round(Number(record.wins) / (Number(record2.loses) + Number(record.wins)) * 100) %>%</td>
                    <% } %>
                  <% } %>
                </tr>
              <% } %>
            <% } %>
          </table>
    </div>

    <div class="container prizes">
      <div class="deck">
        <img src="/cards/blue_back.png"/>
      </div>
      <div class="prize">
        <img src="/cards/blue_back.png"/>
      </div>
      <div class="bets">
        <div class="opponentCard">
          <img src="/cards/blue_back.png"/>
        </div>
        <div class="yourCard">
          <img src="/cards/blue_back.png"/>
        </div>
      </div>
    </div>

    <div class="player">
      <header>
        <span id="error" class="alert alert-danger" role="alert">Select card</span>
        </span>
        <button id="confirm" class="btn btn-outline-info">Confirm</button>
        <span id="score">0</span>
      </header>
      <div class="container">
        <div class="card" id="1">
